create table noticias (
        id int(11) auto_increment ,
        titulo varchar(200),
        texto text,
        id_autores int(11),
        primary key(id),
        index (id_autores)
            );

create table destaques (
        id int(11) auto_increment,
        titulo varchar(200),
        nome_autores varchar(220),
        primary key(id),
        index (nome_autores)
            );

create table comm (
        id int(11)  auto_increment,
        com varchar(200),
        pref text,
        id_autores int(11),
        primary key(id),
        index (id_autores)
            );

create table autores (
        id int(11)  auto_increment,
        nome varchar(200),
        idade int(11),
        primary key(id)
        );
